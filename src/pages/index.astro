---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Sedes from '../components/Sedes.astro';
import Beneficios from '../components/Beneficios.astro';
import Container from '../components/Container.astro';
import Carreras from '../components/Carreras.jsx';
---

<Layout title="Carreras de Postgrado - UCASAL">
	<Navbar/>
	<HeroSection/>
	<Container>
		<Carreras/>
	</Container>
	<Beneficios/>
	<Sedes/>
	<Footer/>
</Layout>
<style is:global>
	@font-face {
	  font-family: "Museo Sans";
	  font-style: normal;
	  font-weight: 300;
	  src: url("/fuentes/MuseoSans_300.otf") format("opentype");
	}
  
	@font-face {
	  font-family: "Museo Sans";
	  font-style: normal;
	  font-weight: 500;
	  src: url("/fuentes/MuseoSans_500.otf") format("opentype");
	}
  
	@font-face {
	  font-family: "Museo Sans";
	  font-style: normal;
	  font-weight: 700;
	  src: url("/fuentes/MuseoSans_700.otf") format("opentype");
	}
  
	@font-face {
	  font-family: "Museo Sans";
	  font-style: normal;
	  font-weight: 900;
	  src: url("/fuentes/MuseoSans_900.otf") format("opentype");
	}
	.bigTitle {
	  display: inline-block;
	  color: #ee1818;
	  font-weight: 900;
	  font-size: 1.5em;
	  font-family: "Museo Sans";
	}
	.neumorphism-component {
    background-color: #f0f0f0; /* Fondo m√°s claro */
    border-radius: 0 0 15px 15px; /* Bordes redondeados solo en la parte inferior */
    box-shadow: 
    inset 10px 10px 20px #d1d1d1,  /* Sombra interna oscura (ajustada para el nuevo color de fondo) */
    inset -10px -10px 20px #ffffff, /* Sombra interna clara */
    10px 10px 20px rgba(0, 0, 0, 0.2), /* Sombra externa oscura */
    -10px -10px 20px rgba(255, 255, 255, 0.7); /* Sombra externa clara */
	}
</style>